#include<iostream>
#include<cstdlib>
#include<ctime>

int main()
{
    srand(time(nullptr));
    int targetNumber = rand() % 100 + 1;
    int userGuess;
    int attempts = 0;

    std::cout << "Welcome to the Number Guessing Game!" << std::endl;

    while(true){
        std::cout<<"Guess the number: ";
        std::cin>> userGuess;
        attempts++;

        if(userGuess < targetNumber){
            std::cout<< "Too low! Try again."<< std::endl;}
            else if(userGuess > targetNumber)
            {
                std::cout<<"TOO high! Try again."<<std::endl;
            } else{
                std::cout<< "Congratulation! You guessedthe number" << targetNumber << " in " <<attempts << "attempts."<<std::endl;
                break;
            }
    }
    return 0;
}
